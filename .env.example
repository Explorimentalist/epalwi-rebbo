# Firebase Configuration
# Get these from Firebase Console > Project Settings > General > Your apps > Web app
NUXT_PUBLIC_FIREBASE_API_KEY=your_value_here
NUXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_value_here
NUXT_PUBLIC_FIREBASE_PROJECT_ID=your_value_here
NUXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_value_here
NUXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_value_here
NUXT_PUBLIC_FIREBASE_APP_ID=your_value_here


# Stripe Configuration
# Get these from Stripe Dashboard > Developers > API keys
NUXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_value_here
STRIPE_SECRET_KEY=your_value_here
STRIPE_WEBHOOK_SECRET=your_value_here
NUXT_PUBLIC_STRIPE_MONTHLY_PRICE_ID=your_value_here
NUXT_PUBLIC_STRIPE_ANNUAL_PRICE_ID=your_value_here
# MailerSend Configuration
# Get this from MailerSend Dashboard > API Tokens
MAILERSEND_API_KEY=your_value_here

# Google Sheets API
# Get this from Google Cloud Console > APIs & Services > Credentials
GOOGLE_SHEETS_API_KEY=your_value_here

# Application Configuration
NUXT_PUBLIC_APP_URL=your_value_here

# Development Environment
NODE_ENV=your_value_here
NUXT_DEBUG=your_value_here

# Firebase Admin (Server-only)
# For secure server-side token verification and Firestore access
FIREBASE_PROJECT_ID=your_value_here
FIREBASE_CLIENT_EMAIL=your_value_here
# If your private key comes with literal \n, keep as-is; the app will convert them at runtime
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_KEY_LINES\n-----END PRIVATE KEY-----\n
